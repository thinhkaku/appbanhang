<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity ="start"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:background="@drawable/xanh"
            android:orientation="horizontal">

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_width="100dp"
                android:layout_height="96dp"
                android:src="@drawable/nenapp"
                app:civ_border_width="3dp"
                app:civ_border_color="#FF0040"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="Thịnh kaku"
                    android:paddingLeft="30sp"
                    android:paddingTop="20sp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:text="Mua hàng thật dễ dàng"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/nenlogin2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearDamVay"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="83sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dam"
                    android:layout_marginBottom="3sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="3sp"
                    app:civ_border_color="#76FF03"
                    app:civ_border_width="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:paddingLeft="20sp"
                    android:text="Đầm, váy"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearAo"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="83sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ao"
                    android:layout_marginBottom="3sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="3sp"
                    app:civ_border_color="#76FF03"
                    app:civ_border_width="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:paddingLeft="20sp"
                    android:text="Áo"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearQuan"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="83sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/quan"
                    android:layout_marginBottom="3sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="3sp"
                    app:civ_border_color="#76FF03"
                    app:civ_border_width="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:paddingLeft="20sp"
                    android:text="Quần"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearAoKhoac"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="83sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/aokhoac"
                    android:layout_marginBottom="3sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="3sp"
                    app:civ_border_color="#76FF03"
                    app:civ_border_width="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:paddingLeft="20sp"
                    android:text="Áo Khoác"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearTrangPhuc"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="83sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/trangphuc"
                    android:layout_marginBottom="3sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="3sp"
                    app:civ_border_color="#76FF03"
                    app:civ_border_width="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:paddingLeft="20sp"
                    android:text="Set trang phục, jumpsuit"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearDoLot"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="83sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dolot"
                    android:layout_marginBottom="3sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="3sp"
                    app:civ_border_color="#76FF03"
                    app:civ_border_width="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:paddingLeft="20sp"
                    android:text="Đồ lót"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearHangDaMua"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="83sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/daxacnhan"
                    android:layout_marginBottom="3sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="3sp"
                    app:civ_border_color="#76FF03"
                    app:civ_border_width="3dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:paddingLeft="20sp"
                    android:text="Danh sách hàng đã mua"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearThongTinCuaHang"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="81dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:background="#00000000"
                    app:srcCompat="@drawable/information" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:paddingLeft="20sp"
                    android:text="Thông tin về cửa hàng"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLogout"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="81dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="3sp"
                    android:background="#00000000"
                    android:padding="2sp"
                    app:srcCompat="@drawable/exit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:background="#00000000"
                    android:gravity="left|center"
                    android:text="Đăng xuất"
                    android:paddingLeft="20sp"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
