<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nenlogin1"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHinhChiTietDaMua"
            android:layout_width="150dp"
            android:layout_marginLeft="2sp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/aokhoac" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenSpChiTietDaMua"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="30sp"
                android:text="Thịnh kaku"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGiaSpChiTietDaMua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingRight="10sp"
                android:drawableRight="@drawable/moneybag"
                android:paddingLeft="30sp"
                android:text="Giá sp"
                android:textColor="@android:color/white"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtSoLuongChiTietDaMua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Số lượng"
                android:gravity="center|left"
                android:paddingLeft="30sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txtMauSacChiTietDaMua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Màu sắc"
                android:gravity="center|left"
                android:paddingLeft="30sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txtSizeChiTietDaMua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Size"
                android:gravity="center|left"
                android:paddingLeft="30sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Tổng tiền phải trả"
        android:textSize="25sp"
        android:gravity="center|left"
        android:id="@+id/txtTongTienPhaiTra"
        android:textColor="@android:color/black"
        android:paddingLeft="10sp"
        android:layout_height="200sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="200sp"
            android:text="Đồng ý"
            android:background="#76FF03"
            android:id="@+id/btnDongYDaMuaHang"
            android:layout_height="50sp" />
    </LinearLayout>

</LinearLayout>