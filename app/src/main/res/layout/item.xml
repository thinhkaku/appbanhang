<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_marginRight="2sp"
    android:layout_marginLeft="2sp"
    android:weightSum="10"
    android:layout_marginBottom="2sp"
    android:layout_marginTop="2sp"
    android:layout_height="300sp">
    <ImageView
        android:id="@+id/imgHinhChinh"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="2sp"
        android:layout_marginRight="1sp"
        android:layout_marginLeft="3sp"
        android:src="@drawable/shopping"
        android:layout_marginBottom="2sp"
        android:layout_height="211dp"
        android:layout_weight="7.50" />

    <TextView
        android:id="@+id/txtTenSp1"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:gravity="center"
        android:paddingRight="10sp"
        android:maxEms="4"
        android:background="#64B5F6"
        android:layout_marginRight="2sp"
        android:layout_marginLeft="2sp"
        android:text="Thịnh kaku"
        android:textColor="@android:color/black"
        android:textSize="8sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#64B5F6"
        android:gravity="center"
        android:textSize="10sp"
        android:id="@+id/txtTinhTranSp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:textColor="@android:color/black"
        android:text="Tình trạng"/>
    <TextView
        android:id="@+id/txtGiaSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:background="#64B5F6"
        android:gravity="center"
        android:text="200000"
        android:textColor="#B71C1C"
        android:textSize="10sp"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnDatHang1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/button_dathang_press"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/btnThemGioHang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_dohang_press"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="7sp" />
    </LinearLayout>


</LinearLayout>