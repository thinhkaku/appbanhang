<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHinh11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/daxacnhan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/nenlogin1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenspChitiet"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:text="Tên sản phẩm"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtGiaspChiTiet"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:text="Giá sản phẩm"
                android:textColor="@android:color/white"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDatHang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_muangay_press"/>

                <Button
                    android:id="@+id/btnLuuVaoGioHang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="3sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_themgiohang_press"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/nenlogin1"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:paddingLeft="15sp"
            android:background="#FFC107"
            android:gravity="center|left"
            android:textColor="@android:color/black"
            android:text="Thông tin chi tiết sản phẩm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtMota"
            android:paddingLeft="15sp"
            android:layout_marginTop="5sp"
            android:textStyle="italic|bold"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:paddingLeft="15sp"
            android:gravity="center|left"
            android:layout_marginTop="20sp"
            android:background="#00E676"
            android:textColor="@android:color/black"
            android:text="Một số hình ảnh cho sản phẩm"/>
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/imgHinh1"
            android:layout_marginTop="10sp"
            android:layout_height="450sp" />
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/imgHinh2"
            android:layout_marginTop="15sp"
            android:layout_height="450sp" />
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/imgHinh3"
            android:layout_marginTop="15sp"
            android:layout_height="450sp" />
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/imgHinh4"
            android:layout_marginTop="15sp"
            android:layout_height="450sp" />
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/imgHinh5"
            android:layout_marginTop="15sp"
            android:layout_height="450sp" />

    </LinearLayout>

</LinearLayout>