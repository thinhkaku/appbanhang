<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHinhXacNhanMuaHang1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/aokhoac" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#69F0AE"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenSp3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingRight="15sp"
                android:gravity="center|left"
                android:paddingLeft="30sp"
                android:text="Thịnh kaku"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGiaSp4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="30sp"
                android:drawableRight="@drawable/moneybag"
                android:paddingRight="15sp"
                android:text="Giá sp"
                android:textColor="#D50000"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtSoLuongSp4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"

                android:gravity="center|left"
                android:paddingLeft="30sp"
                android:text="Số lượng"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txtMauSac1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="30sp"
                android:drawableRight="@drawable/rgb"
                android:paddingRight="15sp"
                android:text="Màu sắc"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSize1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="30sp"
                android:gravity="center|left"
                android:drawableRight="@drawable/fullsize"
                android:paddingRight="15sp"
                android:text="Size"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nenlogin1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenKhachHang1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableRight="@drawable/notebook"
            android:paddingRight="20sp"
            android:gravity="center|left"
            android:textSize="16sp"
            android:paddingLeft="20sp"
            android:text="Tên khách hàng"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtSDTKhachHang1"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center|left"
            android:paddingRight="20sp"
            android:drawableRight="@drawable/phonecall1"
            android:paddingLeft="20sp"
            android:text="Số điện thoại khách hàng"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtDiaChiKhachHang1"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center|left"
            android:textSize="15sp"
            android:drawableRight="@drawable/placeholder"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:text="Địa chỉ hàng"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtTienThanhToan"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center|left"
            android:inputType="number"
            android:drawableRight="@drawable/coins"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:text="Tổng tiền cần thanh toán"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGoiXacNhan"
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_goixacnhan_press" />

            <Button
                android:id="@+id/btnGuiChoShipPer"
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_guishipper_press" />

            <Button
                android:id="@+id/btnHuyDonHang"
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_huydonhang_press" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>